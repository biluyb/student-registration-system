RewriteEngine On

# Redirect student.php to students.php if student.php doesn't exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^student/([0-9]+)$ student.php?id=$1 [L,QSA]

# Handle 404 errors
ErrorDocument 404 /woolkite-registration/404.php

# Prevent access to sensitive files
<Files ~ "\.(env|log|sql)$">
    Order allow,deny
    Deny from all
</Files>